<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@null"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layoutone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/actionbarcolor"

            >

            <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="35dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:src="@drawable/icon" -->
            <!--android:layout_marginLeft="10dp"-->
            <!--/>-->

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:text="cell"
                android:textColor="#fff"
                android:textSize="@dimen/font_size_large"
                />
        </RelativeLayout>




        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"

                android:background="@null"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="Cell Code"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Cell Name (Mandatory)"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Senior Cell"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnSeniorCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true"

                    />

                <EditText
                    android:id="@+id/txtScniorCellName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="PCF"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/txtPCFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true"
                    android:visibility="gone"
                    />

                <EditText
                    android:id="@+id/txtPCF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:orientation="horizontal"
                    android:textSize="@dimen/font_size_small"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/font_size_small"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zone"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/textsize_16"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spnCellZone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle"
                            android:hint="Lorem"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_16"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/txtCellZone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_16" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/font_size_small"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Region"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="@dimen/textsize_16"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spnCellRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle"
                            android:hint="Ipsum"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_16"
                            android:visibility="gone"/>

                        <EditText
                            android:id="@+id/txtCellRegion"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/textsize_16" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Church"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnCellChurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/txtCellChurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Group Church"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnSeniorCellChurchgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="gone"
                    />

                <EditText
                    android:id="@+id/txtCellChurchgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:inputType="number"
                    android:textSize="@dimen/font_size_small"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Contact Phone Number"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellContactPhn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:maxLength="11"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Contact Email Address"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellContactEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Meeting Location"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellMeetingLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnSaveCellMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="#03afef"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="UPDATE"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_20" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>