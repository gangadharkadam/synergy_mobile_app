<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10"
        android:background="@null"
        android:orientation="vertical" >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_20"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lblMeetingNameHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Meeting Name:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_20" />

                <TextView
                    android:id="@+id/lblMeetingName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rectangle1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                   
                    
                     />
                
                 <TextView
                    android:id="@+id/lblMeetingsubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Meeting Subject:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_20" />

                <TextView
                    android:id="@+id/lblMeetingsubject1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   	android:padding="10dp"
                    android:background="@drawable/rectangle1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="Date and Time:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_18" />

                <TextView
                    android:id="@+id/lblMeetingDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                  
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:background="@drawable/rectangle1"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="Venue:"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_18" />

                <TextView
                    android:id="@+id/lblMeetingVenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/rectangle1"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="PCF Leader"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                    android:visibility="gone" />

                 <HorizontalScrollView 
				        android:id="@+id/horizontalView" 
				        android:layout_height="wrap_content"     
				        android:scrollbars="horizontal|vertical" 
				        android:layout_width="wrap_content"   
				        android:scrollbarTrackHorizontal="@color/red"
				        android:layout_marginTop="5dip">
				                
                <TableLayout
                    android:id="@+id/tblMemberDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@drawable/rectangle"
                    android:layout_marginBottom="@dimen/dimen_20" >
                </TableLayout>
                
                </HorizontalScrollView>

                <ListView
                    android:id="@+id/lvDashCellDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:background="@android:color/white"
                    android:dividerHeight="1dp"
                    android:scrollbars="none"
                    android:visibility="gone" >
                </ListView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>