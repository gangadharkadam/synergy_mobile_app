<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
     >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10"
        android:orientation="vertical" >


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="1dp"

                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="Meeting Type"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />

            <!--     <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="1" > -->

                   <!--  <RadioGroup
                        android:id="@+id/rgrpMeetingCategory"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:orientation="horizontal" > -->

                  <Spinner
                    android:id="@+id/spnCellMeetingtype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true" 
                    android:background="@drawable/rectangle1"
                    />

                   <!--  </RadioGroup> -->
              <!--   </LinearLayout> -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Meeting Subject"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtMeetingSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true" >
                </EditText>
                
                <Spinner
                    android:id="@+id/spnCellMeetingSubject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true" 
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="From Date:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_16"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtFromDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/txtFromTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="To Date:"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/textsize_16"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/txtToDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true" />

                        <TextView
                            android:id="@+id/txtToTime"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dimen_5"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true" />
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Cell"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnCellMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:maxLines="1"         
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true" />
                
                
                  <TextView
                      android:id="@+id/churchlable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Chruch"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />

                 <Spinner
                    android:id="@+id/spnChruch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:maxLines="1"         
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true" />
                 

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Venue"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_16"
                    android:textStyle="bold" />

                <AutoCompleteTextView
                    android:id="@+id/txtVenue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnSaveMettingDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="#03afef"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="SAVE"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_20" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>