<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BaseActivity" >

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:orientation="vertical" >

                <LinearLayout
                     android:id="@+id/llPCF"
                     android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:orientation="horizontal" >

                    <LinearLayout
                       android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:src="@drawable/pcfs" />

                        <Button
                            android:id="@+id/btnPCFMaster"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:paddingLeft="@dimen/dimen_5"
                            android:text="PCFs"
                            android:textSize="@dimen/textsize_18" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddPCFMaster"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/add" 
                        android:visibility="gone"
                        />
                    
                   <!--  <Button
                        android:id="@+id/btnAddPCFMaster"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="0.2"
                        android:background="@drawable/text_background_greyborder"
                        android:gravity="center"
                        android:text="Add"
                        android:visibility="gone" /> -->
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSrCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:src="@drawable/senior_cells" />

                        <Button
                            android:id="@+id/btnSrCellMaster"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="Senior Cells"
                            android:textSize="@dimen/textsize_18" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddSrCellMaster"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/add" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:src="@drawable/cells" />

                        <Button
                            android:id="@+id/btnCellMaster"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_5"
                            android:layout_weight="0.8"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="Cells"
                            android:textSize="@dimen/textsize_18" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnAddCellMaster"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/add" />
                </LinearLayout>

             
                <LinearLayout
                     android:id="@+id/llAllMembers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <LinearLayout
                   
                    android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle"
                        android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:src="@drawable/all_members" />

                    <Button
                        android:id="@+id/btnAllMembers"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:text="All Members"
                        android:textSize="@dimen/textsize_18" />
                </LinearLayout>
                
                	 <ImageView
                        android:id="@+id/btnAddmember"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/add" />
                
                </LinearLayout>
                
                  <LinearLayout
                     android:id="@+id/llAllfirsttimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                <LinearLayout
                   
                    android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@drawable/rectangle"
                        android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:src="@drawable/all_members" />

                    <Button
                        android:id="@+id/btnAllfirsttimer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:text="First Timer"
                        android:textSize="@dimen/textsize_18" />
                </LinearLayout>
                
                	 <ImageView
                        android:id="@+id/btnAddFirsttimer"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/dimen_5"
                        android:background="@drawable/rectangle"
                        android:gravity="center"
                        android:padding="@dimen/dimen_10"
                        android:src="@drawable/add" />
                
                </LinearLayout>
                
                <!--  <LinearLayout
                    android:id="@+id/llAllfirsttimer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_5"
                    android:background="@drawable/rectangle"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10"
                        android:src="@drawable/all_members" />

                    <Button
                        android:id="@+id/btnAllfirsttimer"
                        android:layout_width="0dip"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_5"
                        android:layout_weight="0.8"
                        android:background="@null"
                        android:gravity="left|center_vertical"
                        android:text="First Timer"
                        android:textSize="@dimen/textsize_18" />
                </LinearLayout> -->
                
            </LinearLayout>
        </ScrollView>
    </FrameLayout>

    <ListView
        android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/dashcolor"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp" />

</android.support.v4.widget.DrawerLayout>