        android:layout_height="wrap_content" >

        <Spinner
            android:id="@+id/spnZone"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="@dimen/dimen_5"
            android:layout_marginLeft="@dimen/dimen_10"
