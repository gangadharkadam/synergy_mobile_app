<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:weightSum="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="0.8"
            android:layout_width="match_parent"
            android:layout_height="0dip">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/act_ll1"
                        android:weightSum="1"
                        android:paddingTop="5dip"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.3"
                            android:text="First Name"
                            android:textSize="15dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/register_userFName"
                            android:inputType="text"
                            android:layout_weight="0.7"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:paddingTop="5dip"
                        android:orientation="horizontal"
                        android:id="@+id/act_ll2"
                        android:layout_below="@+id/act_ll1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.3"
                            android:text="Last Name"
                            android:textSize="15dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/register_userLName"
                            android:inputType="text"
                            android:layout_weight="0.7"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:orientation="horizontal"
                        android:id="@+id/act_ll3"
                        android:paddingTop="5dip"
                        android:layout_below="@+id/act_ll2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.3"
                            android:text="Address"
                            android:textSize="15dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/register_userAddr"
                            android:inputType="text"
                            android:layout_weight="0.7"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:paddingTop="5dip"
                        android:orientation="horizontal"
                        android:id="@+id/act_ll4"
                        android:layout_below="@+id/act_ll3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.3"
                            android:text="City"
                            android:textSize="15dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/register_userCity"
                            android:inputType="text"
                            android:layout_weight="0.7"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:paddingTop="5dip"
                        android:orientation="horizontal"
                        android:id="@+id/act_ll5"
                        android:layout_below="@+id/act_ll4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.3"
                            android:text="Center Name"
                            android:textSize="15dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/register_userCenter"
                            android:inputType="text"
                            android:layout_weight="0.7"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:weightSum="1"
                        android:paddingTop="5dip"
                        android:orientation="horizontal"
                        android:id="@+id/act_ll6"
                        android:layout_below="@+id/act_ll5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_weight="0.3"
                            android:text="Mobile #"
                            android:textSize="15dip"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                        <EditText
                            android:id="@+id/register_userMobile"
                            android:inputType="phone"
                            android:layout_weight="0.7"
                            android:layout_width="0dip"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/registerBut"
                        android:layout_marginTop="10dip"
                        android:padding="10dip"
                        android:textSize="21dip"
                        android:text="Register"
                        android:layout_below="@+id/act_ll6"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
