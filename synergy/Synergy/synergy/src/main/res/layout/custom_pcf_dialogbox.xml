<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!-- <ImageView
         android:id="@+id/prevImage"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:src="@drawable/appt_back"/>-->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_margin="10dp"
        >
        <Button
            android:id="@+id/viewprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="View Profile"
            android:background="#03afef"
            android:padding="2dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/viewattendancehistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="View Attendance History"
            android:background="#03afef"
            android:padding="2dp"
            android:layout_marginBottom="5dp"/>


        <Button
            android:id="@+id/cellleaderprofile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="View PCF Leader Profile"
            android:background="#03afef"
            android:padding="2dp"
            android:layout_marginBottom="5dp"/>


        <Button
            android:id="@+id/msgcellleader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Send Message to PCF Leader"
            android:background="#03afef"
            android:padding="2dp"
            android:layout_marginBottom="5dp"/>

        <Button
            android:id="@+id/viewmembers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="View Members"
            android:padding="2dp"
            android:background="#03afef"
            android:layout_marginBottom="5dp"/>

    </LinearLayout>

</LinearLayout>
