<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10"
        android:background="@null"
        android:orientation="vertical" >   

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                 android:background="@null"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="Cell Code"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold"
                    android:visibility="gone"/>

                <EditText
                    android:id="@+id/txtCellCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Cell Name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

             
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:orientation="horizontal"
                    android:textSize="@dimen/font_size_small"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/font_size_small"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zone"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/lblzone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle"
                            android:padding="15dp"
                            android:textSize="@dimen/font_size_small"
                            android:textColor="@android:color/black"
                            android:text="Select" />

                        <Spinner
                            android:id="@+id/spnCellZone"
                            android:layout_width="match_parent"
                           android:layout_height="50dp"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small"
                            android:visibility="gone"
                             />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:textSize="@dimen/font_size_small"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Region"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spnCellRegion"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small"/>
                    </LinearLayout>
                </LinearLayout>

                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Group Church"
                    android:textColor="@android:color/black"
                     android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />
                 
                  <TextView
                    android:id="@+id/lblgroupchurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle1"
                    android:padding="10dp"
                    android:text="Select"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                      android:textSize="@dimen/font_size_small"
                    android:textColor="@android:color/black"
                      />

                <Spinner
                    android:id="@+id/spnSeniorCellChurchgroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="gone"
                    />
                
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Church"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />
                
                <TextView
                    android:id="@+id/lblchurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle1"
                    android:padding="10dp"
                    android:text="Select"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@android:color/black"
                      />

                <Spinner
                    android:id="@+id/spnCellChurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" 
                    android:visibility="gone"
                    />
                
                
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="PCF"
                    android:textColor="@android:color/black"
                     android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                  <TextView
                    android:id="@+id/lblpcf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle1"
                    android:padding="10dp"
                    android:text="Select"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                      android:textSize="@dimen/font_size_small"
                    android:textColor="@android:color/black"
                      />
                 
                 
                <Spinner
                    android:id="@+id/txtPCFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true"
                    android:visibility="gone"
                     />
                
                
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Senior Cell"
                    android:textColor="@android:color/black"
                     android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                  <TextView
                    android:id="@+id/lblseniorcell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle1"
                    android:padding="10dp"
                    android:text="Select"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                      android:textSize="@dimen/font_size_small"
                    android:textColor="@android:color/black"
                     />
                 
                 
                <Spinner
                    android:id="@+id/spnSeniorCell"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true"
                    android:visibility="gone"
                     />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Contact Phone Number"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellContactPhn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Contact Email Address"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellContactEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:textSize="@dimen/font_size_small"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Meeting Location"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtCellMeetingLoc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnSaveCellMaster"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="#03afef"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="SAVE"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/textsize_20" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>