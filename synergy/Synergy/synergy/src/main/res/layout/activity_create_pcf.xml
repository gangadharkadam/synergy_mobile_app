<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/dimen_10"
        android:background="@drawable/text_background_greyborder"
        android:orientation="vertical" >

       

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="1dp"
                android:background="@android:color/white"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_20"
                    android:text="PCF Code"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtPCFCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/text_background_greyborder"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="PCF Name"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtPCFName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_10"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/text_background_greyborder"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:orientation="horizontal"
                    android:weightSum="1" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Zone"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold" />
                        
                        <TextView
                            android:id="@+id/lblzone"
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle"
                            android:padding="15dp"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"
                            android:text="Select" />
                        

                        <Spinner
                            android:id="@+id/spnPCFZone"
                             android:layout_width="match_parent"
                           	android:layout_height="50dp"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small"
                            android:visibility="gone" />
                        
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_weight="0.5"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Region"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spnPCFRegion"
                           android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_8"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small"/>
                    </LinearLayout>
                </LinearLayout>
                
                 <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Group Church"
                    android:textColor="@android:color/black"
                     android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnGroupChurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_10"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true"
                    android:visibility="gone"
                    />

                   <TextView
                    android:id="@+id/lblgroupchurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle1"
                    android:padding="10dp"
                    android:text="Select"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                       android:textSize="@dimen/font_size_small"
                    android:textColor="@android:color/black"
                      />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_10"
                    android:text="Church"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spnPCFChurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/rectangle1"
                    android:maxLines="1"
                    android:padding="@dimen/dimen_8"
                    android:singleLine="true"
                    android:textSize="@dimen/font_size_small"
                    android:visibility="gone"
                    />

                 <TextView
                    android:id="@+id/lblchurch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rectangle1"
                    android:padding="10dp"
                    android:text="Select"
                     android:textSize="@dimen/font_size_small"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:textColor="@android:color/black"
                      />
                 
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Phone no."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtPCFContactPhn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/text_background_greyborder"
                    android:maxLines="1"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:layout_marginTop="@dimen/dimen_5"
                    android:text="Email Id"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/font_size_small"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/txtPCFContactEmailId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dimen_5"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:layout_marginRight="@dimen/dimen_10"
                    android:background="@drawable/text_background_greyborder"
                    android:maxLines="1"
                    android:imeOptions="actionNext"
                    android:inputType="textEmailAddress"
                    android:padding="@dimen/dimen_8"
                    android:textSize="@dimen/font_size_small"
                    android:singleLine="true" />

                <Button
                    android:id="@+id/btnSavePCF"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="@color/parrot_green"
                    android:gravity="center"
                    android:padding="@dimen/dimen_10"
                    android:singleLine="true"
                    android:text="SAVE"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/textsize_20" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</RelativeLayout>