<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layoutone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionbarcolor"

        >

        <!--<ImageView-->
            <!--android:id="@+id/imageView1"-->
            <!--android:layout_width="35dp"-->
            <!--android:layout_height="35dp"-->
            <!--android:layout_alignParentLeft="true"-->
            <!--android:src="@drawable/icon"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--/>-->

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:textColor="#fff"
            android:textSize="@dimen/font_size_large"
            />


    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:background="@null"
                android:orientation="vertical" >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimen_10"
                    android:background="@null"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/memInfo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dimen_10"
                        android:text="Personal Information"
                        android:textColor="#24248F"
                        android:textSize="@dimen/textsize_20" />

                    <LinearLayout
                        android:id="@+id/linear1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:orientation="vertical" >


                        <TextView
                            android:id="@+id/lblphoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="@string/attach_photo"
                            android:textColor="@color/darkgrey_textcolor"
                            android:textSize="@dimen/font_size_small" />

                        <ImageView
                            android:id="@+id/imgProfilePic"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:adjustViewBounds="true"
                            android:scaleType="fitXY"
                            android:src="@drawable/user"
                            android:layout_margin="@dimen/dimen_10"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Membership No"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <EditText
                            android:id="@+id/txtMembershipNo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:enabled="false"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="First Name (Mandatory)"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <EditText
                            android:id="@+id/txtMemberfName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Surname"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"/>

                        <EditText
                            android:id="@+id/txtMemberlName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Date of Birth"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:id="@+id/txtMemberDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Date of First Visit"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"/>

                        <TextView
                            android:id="@+id/txtDateofJoining"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Is New Convert"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <Spinner
                            android:id="@+id/txtisnewconvert"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Gender (Mandatory)"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <Spinner
                            android:id="@+id/txtGender"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Marital Status"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <Spinner
                            android:id="@+id/txtMemberMartialInfo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Phone Number"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <EditText
                            android:id="@+id/txtMemberPhone1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:maxLength="11"
                            android:background="@drawable/rectangle1"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Alternate Phone Number"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"/>

                        <EditText
                            android:id="@+id/txtMemberPhone2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:maxLength="11"
                            android:background="@drawable/rectangle1"
                            android:inputType="number"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Email Address"
                            android:textColor="@color/darkgrey_textcolor"
                            android:textSize="@dimen/font_size_small" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <EditText
                                android:id="@+id/txtEmailID1"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_weight="0.9"
                                android:enabled="false"
                                android:hint="email id"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/dimen_10"
                                android:singleLine="true"
                                android:textSize="@dimen/font_size_small" />

                            <ImageView
                                android:id="@+id/editEmailId1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_launcher"
                                android:visibility="gone" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Alternate Email Address"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="1" >

                            <EditText
                                android:id="@+id/txtEmailID2"
                                android:layout_width="0dip"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/dimen_10"
                                android:layout_marginLeft="@dimen/dimen_10"
                                android:layout_weight="0.9"
                                android:enabled="false"
                                android:hint="email id"
                                android:inputType="textEmailAddress"
                                android:maxLines="1"
                                android:padding="@dimen/dimen_10"
                                android:singleLine="true"
                                android:textSize="@dimen/font_size_small" />

                            <ImageView
                                android:id="@+id/editEmailId2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/pencil" />
                        </LinearLayout>



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Home Address"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />



                        <EditText
                            android:id="@+id/txtMemberHomeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/text_background_greyborder"
                            android:padding="@dimen/dimen_10"
                            android:text="Pick My Location"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small"
                            android:visibility="gone" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dimen_10"
                            android:text="Office Address"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/font_size_small" />

                        <EditText
                            android:id="@+id/txtOfficeAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dimen_10"
                            android:layout_marginLeft="@dimen/dimen_10"
                            android:layout_marginRight="@dimen/dimen_10"
                            android:background="@drawable/rectangle1"
                            android:inputType="textMultiLine"
                            android:maxLines="1"
                            android:padding="@dimen/dimen_10"
                            android:singleLine="true"
                            android:textSize="@dimen/font_size_small" />


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btnSaveMemberInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dimen_10"
                android:background="#03afef"
                android:gravity="center"
                android:padding="@dimen/dimen_10"
                android:singleLine="true"
                android:text="SAVE"
                android:textColor="@android:color/black"
                android:textSize="@dimen/textsize_20" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>
